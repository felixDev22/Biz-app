<main class="main-style">
  <div class="header">
    <%= image_tag(image_path("BIZZ-01.png"), alt: "logo", class: "logo") %>
    <div>
      <p>CATEGORIES</p>
    </div>

    <div class="d-flex  gap-3">
    <%= link_to "New category", new_category_path, class: "new-cate" %>
      <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "form-control me-2 p-3" %>
    </div>
  </div>

  <p style="color: green"><%= notice %></p>

  <div id="categories">
    <% if @categories.empty? %>
      <div class="message">There are no categories to display. Add one.</div>
    <% else %>
      <% @categories.each do |category| %>
        <%= render category %>
      <% end %>
    <% end %>
  </div>
</main>
