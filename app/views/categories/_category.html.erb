<div id="<%= dom_id category %>">
  <%= link_to transactions_path(category_id: category.id), class: "card-link" do %>
    <div class="card">
    
      <div class="card-img">
      <%= image_tag(category.icon, class: "w-100" ) %>
      </div>
      <div class="card-items">
      <div>
      <h5 class="text-muted"><%= category.name %></h5>
      </div>

      <div class="amount">
  <p>$ <%= number_with_precision(category.transactions.sum(:amount), precision: 2, delimiter: ',') %></p>
</div>
      </div>
    </div>
  <% end %>
</div>
