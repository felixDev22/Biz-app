<div id="<%= dom_id category %>">
  <%= link_to transactions_path(category_id: category.id), class: "card-link" do %>
    <div class="card shadow-sm bg-white mb-5">
    <div class="row g-0">
    <div class="col-5 col-sm-4 p-4">
      <%= image_tag(category.icon, class: "img-fluid w-50" ) %>
      </div>
      <div class="col-7 col-sm-8">
      <div class="card-body d-flex justify-content-evenly align-content-center">
      <div>
      <h5 class="card-body fs-1 text-muted"><%= category.name %></h5>
      </div>
      <div>
      <p class="card-body fs-3"><%= category.transactions.sum(:amount)%></p>
      </div>
      </div>
      </div>
    </div>
    </div>
  <% end %>
</div>
