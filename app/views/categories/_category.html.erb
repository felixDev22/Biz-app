<div id="<%= dom_id category %>">
  <%= link_to transactions_path(category_id: category.id), class: "card-link" do %>
    <div class="card">
    
      <div class="card-img">
      <%= image_tag(category.icon, class: "w-100" ) %>
      </div>
      <div class="card-items">
      <div>
      <h5 class="text-muted"><%= category.name %></h5>
      </div>

      <div >
      <p class="fs-3"><%= category.transactions.sum(:amount)%></p>
      </div>
      </div>
    </div>
  <% end %>
</div>
