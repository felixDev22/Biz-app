<div class="header">
  <%= link_to categories_path, class: "back-link" do %>
    <%= image_tag(image_path("BIZZ-01.png"), alt: "logo", class:"w-25") %>

    <i class="bi bi-arrow-left"></i>
  <% end %>
  <p>TRANSACTIONS</p>
  <i class="bi bi-list"></i>
  <div>
    <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "form-control me-2 p-3" %>
  </div>
</div>
<p style="color: green"><%= notice %></p>
<div id="transactions">
  <% if @transactions.empty? %>
    <div class="message">There are no transactions to display. Add one.</div>
  <% else %>
    <% @transactions.each do |transaction| %>
      <%= render transaction %>
    <% end %>
  <% end %>
</div>
<div class="total">
  <h5>Total Amount:</h5>
  <p><%= @total %></p>
</div>
<div>
  <%= link_to "New transaction", new_transaction_path, class: "btn btn-secondary" %>
</div>
<div>
  <%= link_to "Show this transaction", @transaction %> |
  <%= link_to "Back to transactions", transactions_path %>
</div>
